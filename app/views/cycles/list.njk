{% extends "_layout.njk" %}

{% set primaryNavId = "" %}

{% set hidePrimaryNavigation = true %}
{% set hideSwitcher = true %}

{% set title = "Recruitment cycles" %}

{% block beforeContent %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <ul class="govuk-list govuk-list--spaced">
        <li>
          <a class="govuk-link" href="/cycles/{{ data.currentCycle.code }}/organisations/{{ organisation.id }}">
            {{ data.currentCycle.code | getCycleLabel }}
          </a>
        </li>
        <li>
          <a class="govuk-link" href="/cycles/{{ data.nextCycle.code }}/organisations/{{ organisation.id }}">
            {{ data.nextCycle.code | getCycleLabel }}
          </a>
        </li>
      </ul>

    </div>
  </div>
{% endblock %}
