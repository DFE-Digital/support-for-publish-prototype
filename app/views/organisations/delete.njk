{% extends "_layout.njk" %}

{% set primaryNavId = "organisations" %}

{% set caption = organisation.name + " (" + organisation.code + ")" %}

{% if hasCourses %}
  {% set title = "You cannot remove this organisation" %}
{% else %}
  {% set title = "Are you sure you want to remove this organisation?" %}
{% endif %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {% if hasCourses %}



        {% else %}

          {{ govukButton({
            text: "Remove organisation",
            classes: "govuk-button--warning"
          }) }}

        {% endif %}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
