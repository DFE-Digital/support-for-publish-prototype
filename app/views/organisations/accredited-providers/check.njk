{% extends "_layout.njk" %}

{% set primaryNavId = "organisations" %}
{% set subNavId = "accreditedProvider" %}

{% set title = "Check your answers" %}
{% set caption = "Add accredited provider - " + organisation.name + " (" + organisation.code + ")" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>



        {{ govukButton({
          text: "Add accredited provider"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
