{% extends "_layout.njk" %}

{% set primaryNavId = "organisations" %}
{% set subNavId = "users" %}

{% set title = user.firstName + " " + user.lastName %}
{% set caption = organisation.name + " (" + organisation.code + ")" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {% set organisationsHtml %}
        <ul class="govuk-list">
          {% for userOrganisation in user.organisations %}
            <li>
              {{ userOrganisation.name }}
            </li>
          {% endfor %}
        </ul>
      {% endset %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "First name"
            },
            value: {
              text: user.firstName
            }
          },
          {
            key: {
              text: "Last name"
            },
            value: {
              text: user.lastName
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: user.email
            }
          },
          {
            key: {
              text: "Organisations"
            },
            value: {
              html: organisationsHtml
            }
          } if 1 == 0
        ]
      }) }}

      {% if not (user.id == signedInUser.id) %}
        <p class="govuk-body">
          <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Remove user</a>
        </p>
      {% endif %}

    </div>
  </div>

{% endblock %}
