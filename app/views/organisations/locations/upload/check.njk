{% extends "_layout.njk" %}

{% set primaryNavId = "organisations" %}
{% set subNavId = "locations" %}

{% set title = "Check your answers" %}
{% set caption = "Add locations - " + organisation.name + " (" + organisation.code + ")" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {% for location in locations %}

          {% set addressHtml %}
            <p class="govuk-body">
              {% if location.address.addressLine1.length %}
                {{ location.address.addressLine1 }}<br>
              {% endif %}
              {% if location.address.addressLine2.length %}
                {{ location.address.addressLine2 }}<br>
              {% endif %}
              {% if location.address.town.length %}
                {{ location.address.town }}<br>
              {% endif %}
              {% if location.address.county.length %}
                {{ location.address.county }}<br>
              {% endif %}
              {% if location.address.postcode.length %}
                {{ location.address.postcode | upper }}<br>
              {% endif %}
            </p>
          {% endset %}

          {{ govukSummaryList({
            card: {
              title: {
                text: "Location " + loop.index
              },
              actions: {
                items: [
                  {
                    href: actions.change + "?action=change&position=" + loop.index0,
                    text: "Change",
                    visuallyHiddenText: "location " + loop.index
                  }
                ]
              }
            },
            rows: [
              {
                key: {
                  text: "Name"
                },
                value: {
                  text: location.name
                }
              },
              {
                key: {
                  text: "Unique reference number (URN)"
                },
                value: {
                  text: location.urn if location.urn else "Not entered",
                  classes: "govuk-hint" if not location.urn
                }
              },
              {
                key: {
                  text: "Address"
                },
                value: {
                  html: addressHtml
                }
              }
            ]
          }) }}

        {% endfor %}

        {{ govukButton({
          text: "Add locations"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
